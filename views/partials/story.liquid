<li>
    <form class="story" action="/favorite">
        <h2>{{ story.title }}</a></h2>
        <a href="/story/{{ story.id  }}">Play</a>
        <p>{{ story.summary }}</p>
        <input type="hidden" value="{{ story.id }}" name="story_id">
        {% comment %} <audio controls src="https://fdnd-agency.directus.app/assets/{{ story.audio[0].audio_file }}"></audio> {% endcomment %}
        <img src="https://fdnd-agency.directus.app/assets/{{ story.image.id }}" alt="story image" width="100px" height="100px">
    </form>
</li>